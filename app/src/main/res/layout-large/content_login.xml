<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AuthBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login"
    tools:context="com.carvalho.leonardo.ribbitnew.ui.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:src="@mipmap/background"
        style="@style/AuthBackgroundImage"/>

    <include layout="@layout/loginbox"
             android:id="@+id/include"/>


    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:id="@+id/loginButton"
        style="@style/AuthButton"
        android:layout_below="@+id/include"
        android:layout_alignLeft="@+id/include"
        android:layout_alignStart="@+id/include"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_string"
        android:id="@+id/signUpText"
        android:layout_marginBottom="56dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginBottom="108dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="A timer project"
        android:id="@+id/subtitle"
        style="@style/AuthSubtitle"/>

    <TextView
        android:text="@string/aplicativo"
        android:id="@+id/title"
        style="@style/AuthTitle"
        android:layout_marginTop="180dp"/>


</RelativeLayout>
